/* Resets */
header a.titol span {
  top: auto;
}
footer {
  border-top: none;
}
header.sticky_top {
  width: 100%;
  height: 60px;
}
#sticky-wrapper .tools {
  top: 15px !important;
}
.place .breadcrumb {
  padding: 0;
  margin-bottom: 0;
  list-style: none;
  background-color: transparent;
  border-radius: 0;
}
.small_button:hover {
  background: #689dcb;
  color: #fff;
  text-decoration: none !important;
}
.label {
  display: inherit;
  padding: 0;
  font-size: inherit;
  font-weight: 400;
  line-height: inherit;
  color: inherit;
  text-align: left;
  white-space: inherit;
  vertical-align: inherit;
  border-radius: 0
}
.main_metrics .metric[data-page-href]:hover {
  background: #C9DCEC;
  cursor: pointer;
}
.tools .modal_widget .widget_compare {
  right: -10%;
}
input[type="submit"]:hover,
.button:hover {
  background: #689dcb;
  color: #fff;
  text-decoration: none !important;
}
.cercador_vermell .btn,
header .container .in form .form-group .buttonG.btn {
  background: url(/img/NG_ico_lupa.png) no-repeat center center #0b66ac;
}
.cercador_vermell .btn:active,
.cercador_vermell .btn:hover {
  background: url(/img/NG_ico_lupa.png) no-repeat center center #0b66ac;
}
.cercador_vermell .form-group .form-control {
  background: url(/img/NG_ico_cercador_mbl.png) no-repeat 0.467em center #FFFFFF;
}
.widget_graph {
  padding: 1.5em 2em !important;
}
.featured_budget_line .cont {
  padding: 2.5em 3em 1.75em !important;
}
.ie_intro header.cat .form_filters {
  margin: 1em 0 0 1.5em;
}
.form_filters li a:hover, .form_filters li a.buttonSelected, .form_filters a.active {
  background: #C9DCEC;
}
.xarxes_socials {
  margin-bottom: 20px;
}
.llistat_xarxes_socials .list-group-item {
  margin: 0;
}
.llistat_xarxes_socials .list-group-item a {
  margin: 0;
  padding: 0;
}
header .column ul.menu-superior li {
  padding: 0 10px;
  margin: 0;
}

/* Main body */
body,
h1,
h2,
h3,
h4,
h5,
h6 {
  color: #333;
  font-family: "OpenSansRegular", sans-serif;
}
.tools {
  width: 450px !important;
}
.global {
  display: none;
}
.main_content {
  width: auto;
  max-width: 1140px;
  float: none;
  margin: 0 auto;
}
.top-claim {
  display: none;
}
a {
  color: #2A6EBB;
}
#follow {
  display: none;
}
h2 {
  line-height: 1.4em;
}
#doorbell-button {
  display: none;
}
.mvlogo {
  line-height: 1.1;
}

@media (min-width: 768px) {
  .mvlogo {
    line-height: normal;
  }
}

/* Home */
.pre_home {
  padding: 4em 0;
}
.pre_home .places_search {
  margin: 1em 0 0 0;
  font-size: 1.25em;
}
.places_search {
  line-height: 1.6em;
  max-width: 24em;
  padding: 1.5%;
  border: 1px solid #ddd;
}
.big_compare form input,
.big_compare form input.search_compare,
.home_section form input,
.home_section form input.search_compare {
  font-size: 1.25rem;
  border-radius: 0;
  border: 1px solid #ddd;
}
.pre_home h1 img {
  visibility: hidden;
}
.button {
  background: #2A6EBB;
}
input[type="submit"] {
  background: #2A6EBB;
}
.ranking_card {
  background: #EFF5FA;
}
.ranking_card h2 {
  line-height: 1.4;
  font-size: 1rem;
  max-height: 5.6em;
}
.ranking_card .winner {
  font-size: 1rem;
}
.ranking_card .runner_ups {
  font-size: .75rem;
}
.ranking_card .runner_ups ol li {
  white-space: normal;
}
.ranking_cards_carousel .the_content {
  min-height: 300px;
  max-height: 500px;
}
.about_municipalities h3 {
  color: #2A6EBB;
}
.pre_home h1,
.pre_home h2,
.pre_home h1 span::before {
  color: #333;
}
.home_section #explore_prompt {
  color: #333;
}
.home_section #explore_prompt input[type="submit"] {
  margin-top: 15px;
}
.home_section h2.section_heading {
     color: #333;
}
.about_block li {
  color: #333;
}
.home_section .examples p a[data-target="how_it_works"] {
  display: none;
}

@media (min-width: 768px) {
  .ranking_card h2 {
    line-height: 1.4;
    font-size: 1.3em;
    max-height: none;
  }
  .ranking_card .winner {
    font-size: 1.3em;
  }
  .ranking_card .runner_ups {
    font-size: .9em;
  }
  .ranking_card .runner_ups ol li {
    white-space: nowrap;
  }
  .pre_home .places_search {
    font-size: 1.6em;
  }
  .big_compare form input,
  .big_compare form input.search_compare,
  .home_section form input,
  .home_section form input.search_compare {
    font-size: 1.4em;
  }
  .home_section #explore_prompt input[type="submit"] {
    margin-top: 0;
  }
}

/* App */
.place {
  margin-top: 4rem !important;
}
body[data-action="map"] header.place h1 .switcher,
body[data-action="ranking"] header.place h1 .switcher {
  display: block;
  margin-left: -4px;
}
.year_switcher {
  width: 106px;
  margin-left: 0;
  display: block;
  margin-bottom: 0.5rem;
}
.year_switcher a {
  padding-left: 0;
}
.year_switcher ul a {
  padding-left: 10px;
}
.year_switcher ul {
  width: 95px;
}
.year_switcher ul a:hover,
.year_switcher ul a:active,
.year_switcher ul a:focus {
  text-decoration: none !important;
}
.kind_switcher ul li a:hover,
.kind_switcher ul li a:active,
.kind_switcher ul li a:focus {
  text-decoration: none !important;
}
.small_button {
  background: #2A6EBB;
}
.main_metrics .metric.selected {
  background: #C9DCEC;
}
.main_metrics .metric {
  background: #EFF5FA;
}
.main_metrics .metric.selected::after {
  border-top-color: #C9DCEC;
}
.main_metrics .metric .main {
  font-size: 1rem;
}
.main_metrics .metric .percentage_change {
  position: relative;
  top: 0.25rem;
  right: 0em;
}
.tools a.tool_button {
  background: #F5F5F5;
}
.tools a.tool_button:hover .fa {
    color: #0B66AC;
}
.widget_graph {
  background: #F5F5F5;
}
.featured_budget_line .cont {
  background: #F5F5F5;
}
.featured_budget_line .show_me_another {
  background: #F5F5F5;
}
.cta_majors {
  background: #EFF5FA;
}
.cta_majors .pro_user h3 {
  color: #2A6EBB
}
.cta_majors .pro_user .small_button {
  background: #2A6EBB;
}
.cta_majors .end_user {
  background: #2A6EBB;
}
.cta_majors .end_user .small_button {
  color: #2A6EBB;
}
.button.user {
  background: #2A6EBB;
}
.form_filters ul {
  background: #EFF5FA;
}
header.place h1 {
  line-height: 1.3;
  margin-top: 0;
  margin-bottom: 0;
  text-align: left;
  font-weight: 400;
  margin-right: 0.5rem;
}
header.place .share_links {
  margin: 0.5em 0;
}
header.place .share_links a {
  width: 35px;
  color: #fff;
}
.execution .box h1 {
  color: #2A6EBB;
}
.button_light {
  background: #EFF5FA;
}
.button_light:hover,
.button_light:active {
  background: #C9DCEC;
}
input[type=submit]:disabled:hover,
input[type=submit]:hover,
input[type=submit]:disabled:active,
input[type=submit]:active {
  background: #689dcb;
}
.autocomplete-selected {
  background: #2A6EBB;
}
header.ranking .ranking_main_links {
  line-height: 1.5;
}
header.ranking img {
  width: 100%;
  margin: 1rem;
}
header.ranking p {
  width: auto;
}
.ranking_cards_carousel {
  position: relative;
}
.ranking_cards_carousel .left_side {
  position: absolute;
  left: -15px;
  z-index: 1;
}
.ranking_cards_carousel .right_side {
  position: absolute;
  right: -15px;
  z-index: 1;
}
.ranking_cards_carousel .nav a:hover {
  text-decoration: none !important;
}
.ranking_card {
  width: 100%;
  padding-left: 1.5em !important;
  padding-right: 1.5em !important;
}
.ranking_list .ranking_card:nth-child(2n) {
  float: none;
}
.ranking_card:hover,
.ranking_card:active {
  background: #C9DCEC;
}
.ranking_cards_carousel .the_content {
  min-width: 100%;
}
.ranking_cards_carousel .ranking_card {
  min-width: auto;
}

.rankings .filters {
  min-height: 100px;
  height: auto;
}
.rankings .filters li {
  width: 100%
}
.rankings .noUi-connect {
  background: #2A6EBB;
}
nav.pagination .current,
nav.pagination span a,
nav.pagination .gap {
  color: #fff;
  background: #2A6EBB;
  border-top: none;
}
nav.pagination .current:hover,
nav.pagination span a:hover,
nav.pagination .gap:hover,
nav.pagination .current:active,
nav.pagination span a:active,
nav.pagination .gap:active {
  background: #689dcb;
  text-decoration: none !important;
}
.comparison_table th.location .add {
  background: #2A6EBB;
}
.comparison_table th.location .add_location {
  z-index: 1;
}
.comparison_table th.location .remove {
  top: 4px;
}
.tabs > ul > li:nth-child(2),
.tabs > ul > li:nth-child(3),
.tabs > ul > li:nth-child(4) {
  display: none;
}
.place header.sub a,
.place header.sub .sep {
  font-weight: 400;
}
#map {
  height: 450px;
}

@media (min-width: 768px) {
  header.ranking img {
    width: 65%;
    margin: 0;
  }
  header.ranking p {
    width: 50%;
    margin-top: 1rem;
  }
  .year_switcher {
    margin-bottom: 0.5rem;
    display: inline-block;
  }
  .ranking_list .ranking_card:nth-child(2n) {
    float: right;
  }
  #map {
    height: 760px;
  }
  .main_metrics .metric .percentage_change {
    position: absolute;
    top: 1.4em;
    right: 1em;
  }
  .main_metrics .metric .main {
    font-size: 1.3rem;
  }
  .ranking_cards_carousel {
    position: relative;
  }
  .ranking_cards_carousel .the_content {
    min-width: inherit;
  }
  .ranking_card {
    height: 290px;
    width: 47%;
  }
  .rankings .filters li {
    width: 27%;
  }
  .place {
    margin-top: 0 !important;
  }
  body[data-action="map"] header.place h1 .switcher,
  body[data-action="ranking"] header.place h1 .switcher {
    margin-left: 0;
    display: inline-block;
  }
}

/* Navigation */
.navigation {
  margin-bottom: 1rem;
}
.navigation-headline {
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 1.1rem;
  margin-bottom: 1rem;
  margin-top: 1rem;
}
.navigation-headline a {
  color: #333;
}
.navigation-headline a:hover,
.navigation-headline a:active {
  text-decoration: none !important;
}
.navigation-list {
  float: left !important;
}
.navigation-list ul {
  padding-left: 0;
}
.navigation-list li {
  font-weight: 600;
  display: inline-block;
  margin-right: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 0.75rem;
}
.navigation-list li a {
  transition: none;
}
.navigation-list li a:hover,
.navigation-list li a:active,
.navigation-list li a:focus {
  text-decoration: none !important;
  border-bottom: 3px solid #C9DCEC;
}
.navigation-list li a.selected {
    border-bottom: 3px solid #C9DCEC;
}
header.sticky_top img {
  display: none;
}
header.sticky_top .places_search {
  background: url(/img/NG_ico_cercador_mbl.png) no-repeat 0.467em center #FFFFFF;
  padding: .5em 2em;
  width: 195px;
}

@media (min-width: 768px) {
  .navigation-list {
    float: right !important;
  }
  .navigation-headline {
    margin-top: 0;
    display: inline-block;
  }
  .navigation-list li {
    font-size: 0.875rem;
    margin-right: 1.5rem;
  }
}

/* Open data */
.opendata {
  height: 275px;
  color: #333;
  background: #f2f2f2;
  padding: 0 2rem;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: center;
  border-radius: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}
.opendata:hover,
.opendata:focus,
.opendata:active {
  text-decoration: none !important;
  color: #333;
  box-shadow: 0 2px 6px rgba(0,0,0,0.3);
}
.opendata:hover h1,
.opendata:hover p {
  text-decoration: none;
}
.opendata h1 {
  text-align: left;
  color: #333;
  margin-bottom: 0.5rem;
  font-size: 1.5rem;
}
.opendata p {
  color: rgb(141, 140, 140);
}
@media (min-width: 768px) {
  .opendata h1 {
    font-size: 2.188em;
  }
}

/* Charts */
table {
  font-family: "OpenSansRegular", sans-serif;
}
.comparison_table td.budget_line {
  min-width: 60%;
}
.totals tr td {
  background: #F5F5F5;
}
.form_filters li a.buttonSelected {
  background: none;
  text-decoration: underline;
}
.execution .box .vizz line.year_marker {
  stroke: #2A6EBB;
}

/* Map page */
.sidebar_wrapper .year_switcher ul {
  left: 7px;
}
.sidebar_wrapper .year_switcher ul a {
  padding-left: 12px;
}
.map_sidebar .year_switcher a {
  color: #999;
}
.map_sidebar .year_switcher a:hover,
.map_sidebar .year_switcher a:focus {
  color: #999;
}
.map_sidebar .items a {
  color: #0b66ac;
}
body[data-action="map"] .main_metrics .metric:hover,
body[data-action="map"] .main_metrics .metric:focus,
body[data-action="map"] .main_metrics .metric:active {
  background: #C9DCEC;
}

/* Delete FAQ */
.disclaimer {
  display: none;
}

/* Footer */
.fons_footer .avislegal {
  line-height: 1.35;
}
