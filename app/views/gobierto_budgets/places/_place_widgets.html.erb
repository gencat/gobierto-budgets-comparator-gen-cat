<div class="main_metrics clearfix">

  <div class="metric"
    data-widget-template="#widget-template"
    data-widget-type="per_person"
    data-line-widget-series="means"
    data-line-widget-url="<%= gobierto_budgets_api_data_lines_path(organization_slug: current_organization.combined_slug, places_collection: params[:places_collection], year: @year, what: 'per_person', format: :json) %>"
    data-line-widget-type="per_person"
    data-widget-data-url="<%= gobierto_budgets_api_data_total_budget_per_inhabitant_path(organization_slug: current_organization.combined_slug, places_collection: params[:places_collection], year: @year, format: :json) %>"
    data-page-href="<%= location_path(slug: current_organization.combined_slug, year: @year, anchor: 'per_person')%>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template"
    data-widget-type="total_budget"
    data-line-widget-series="means"
    data-line-widget-url="<%= gobierto_budgets_api_data_lines_path(organization_slug: current_organization.combined_slug, places_collection: params[:places_collection], year: @year, what: 'total_budget', format: :json) %>"
    data-line-widget-type="total_budget"
    data-widget-data-url="<%= gobierto_budgets_api_data_total_budget_path(organization_slug: current_organization.combined_slug, places_collection: params[:places_collection], year: @year, format: :json) %>"
    data-page-href="<%= location_path(slug: current_organization.combined_slug, year: @year, anchor: 'total_budget')%>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template-execution"
    data-widget-type="total_budget_execution"
    data-widget-data-url="<%= gobierto_budgets_api_data_total_budget_execution_path(organization_slug: current_organization.combined_slug, places_collection: params[:places_collection], year: @year, format: :json) %>"
    data-page-href="<%= gobierto_budgets_place_execution_path(slug: current_organization.combined_slug, year: @year, anchor: 'total_budget_execution')%>">
  </div>

  <div class="metric"
    data-widget-template="#widget-template"
    data-widget-type="population"
    data-widget-data-url="<%= gobierto_budgets_api_data_population_path(ine_code: current_organization.place_id, places_collection: params[:places_collection], year: @year, format: :json) %>">
  </div>

  <% if current_organization.city_council? %>
    <div class="metric"
      data-widget-template="#widget-template"
      data-widget-type="debt"
      data-widget-data-url="<%= gobierto_budgets_api_data_debt_path(organization_slug: current_organization.combined_slug, year: @year, places_collection: params[:places_collection], format: :json) %>">
    </div>
  <% end %>
</div>


<%= render partial: 'shared/widget_template' %>

<%= render partial: 'shared/widget_template_execution' %>

<%= render partial: 'shared/widget_template_debt' %>
